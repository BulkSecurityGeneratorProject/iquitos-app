<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Product.
    -->
    <changeSet id="20181023012745-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="unit_measurement_id"
                                 baseTableName="product"
                                 constraintName="fk_product_unit_measurement_id"
                                 referencedColumnNames="id"
                                 referencedTableName="unit_measurement"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="product"
                                 constraintName="fk_product_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="vartiant_id"
                                 baseTableName="product"
                                 constraintName="fk_product_vartiant_id"
                                 referencedColumnNames="id"
                                 referencedTableName="variant"/>

        <addForeignKeyConstraint baseColumnNames="variant_id"
                                 baseTableName="product"
                                 constraintName="fk_product_variant_id"
                                 referencedColumnNames="id"
                                 referencedTableName="variant"/>

        <addForeignKeyConstraint baseColumnNames="sell_has_product_id"
                                 baseTableName="product"
                                 constraintName="fk_product_sell_has_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sell_has_product"/>

        <addForeignKeyConstraint baseColumnNames="purchase_has_product_id"
                                 baseTableName="product"
                                 constraintName="fk_product_purchase_has_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="purchase_has_product"/>

    </changeSet>
</databaseChangeLog>
